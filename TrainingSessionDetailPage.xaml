<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TrainingApp.TrainingSessionDetailPage"
             Title="Session Details">
    <ContentPage.Content>
        <StackLayout Padding="10" Spacing="20">

            <Label Text="{Binding Name}" 
                       FontSize="24" 
                       FontAttributes="Bold" 
                       HorizontalOptions="Center" />

            <Label Text="{Binding Date, StringFormat='Date: {0:MM/dd/yyyy}'}" 
                       FontSize="18" 
                       HorizontalOptions="Center" />

            <ListView x:Name="ExercisesListView"
                          ItemsSource="{Binding Exercises}"
                          HasUnevenRows="True">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <StackLayout Orientation="Horizontal" Padding="10">
                                <Label Text="{Binding ExerciseName}" 
                                           FontAttributes="Bold" 
                                           HorizontalOptions="StartAndExpand" />
                                <Label Text="{Binding Sets}" 
                                           HorizontalOptions="Center" />
                                <Label Text="{Binding Reps}" 
                                           HorizontalOptions="Center" />
                                <Label Text="{Binding Weight}" 
                                           HorizontalOptions="End" />
                                <Button Text="Delete" 
                                            Clicked="OnDeleteExerciseClicked"
                                            CommandParameter="{Binding Id}"
                                            HorizontalOptions="End" />
                            </StackLayout>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>

            <Button Text="Add Exercise"
                        Clicked="OnAddExerciseClicked"
                        BackgroundColor="RoyalBlue"
                        TextColor="White" />

            <Button Text="Delete Session"
                        Clicked="OnDeleteSessionClicked"
                        BackgroundColor="Red"
                        TextColor="White" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>