<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TrainingApp.TrainingSessionDetailPage"
             Title="Session Details">

    <StackLayout Padding="10">
        <Label x:Name="SessionNameLabel" Text="Session Name" />
        <Label x:Name="SessionDateLabel" Text="Session Date" />
        <ListView x:Name="ExercisesListView" />

        <Button Text="Add Exercise" Clicked="OnAddExerciseClicked" />
    </StackLayout>
</ContentPage>