<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TrainingApp.TrainingSessionDetailPage"
             Title="Session Details">

    <StackLayout Padding="10">
        <Label x:Name="SessionNameLabel" Text="Session Name" />
        <Label x:Name="SessionDateLabel" Text="Session Date" />
        <ListView x:Name="ExercisesListView" ItemsSource="{Binding Exercises}">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <StackLayout Orientation="Horizontal" Padding="10">
                            <Label Text="{Binding ExerciseName}" FontAttributes="Bold" HorizontalOptions="StartAndExpand" />
                            <Label Text="{Binding Sets}" HorizontalOptions="Center" />
                            <Label Text="{Binding Reps}" HorizontalOptions="Center" />
                            <Label Text="{Binding Weight}" HorizontalOptions="End" />
                        </StackLayout>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

        <Button Text="Add Exercise" Clicked="OnAddExerciseClicked" />
    </StackLayout>
</ContentPage>