<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TrainingApp.MainPage"
             Title="Training Sessions">

    <ScrollView>
        <StackLayout Padding="10">
            <Label Text="Training Sessions" FontSize="24" HorizontalOptions="Center" />
            <ListView x:Name="TrainingSessionsListView"
                  ItemTapped="OnTrainingSessionTapped">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <TextCell Text="{Binding Name}" Detail="{Binding Date}" />
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
            <Button Text="Create New Session" Clicked="OnCreateNewSessionClicked" />
        </StackLayout>
    </ScrollView>

</ContentPage>
