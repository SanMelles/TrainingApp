<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TrainingApp.MainPage"
             Title="Training Sessions">

    <ScrollView>
        <StackLayout Padding="20">
            <Label Text="Training Sessions" 
                   FontSize="24"
                   TextColor="{StaticResource Primary}"/>
            <ListView x:Name="SessionsList"
                        SelectionMode="Single"
                        ItemSelected="OnSessionSelected">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <StackLayout>
                            <Label Text="{Binding Name}" 
                                   FontSize="18" 
                                   TextColor="{StaticResource Secondary}"/>
                            <Label Text="{Binding Date, StringFormat='{0:MM/dd/yyyy}'}" 
                                   FontSize="14" 
                                   TextColor="{StaticResource Dark}" />
                        </StackLayout>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
            <Button Text="Create New Session" 
                    Clicked="OnCreateNewSession"
                    BackgroundColor="{StaticResource Secondary}"
                    TextColor="{StaticResource Dark}"/>
        </StackLayout>
    </ScrollView>

</ContentPage>
